<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input 
        type="text"
        name="name"
        placeholder="Digite seu nome completo"
        value="{{ user.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
        type="email"
        name="email"
        placeholder="Digite seu email"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
        type="password"
        name="password"
        placeholder="Escolha uma senha segura"
        >
    </div>
</div>

{% if not user.id %}
<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input 
        type="password"
        name="passwordRepeat"
        placeholder="Repita a senha escolhida"
        >
    </div>
</div>
{% endif %}